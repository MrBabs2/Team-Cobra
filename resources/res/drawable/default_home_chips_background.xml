<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:exitFadeDuration="@android:integer/config_shortAnimTime">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="35dp"/>
            <gradient android:startColor="#fe9150" android:endColor="#fe6446" android:angle="0"/>
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <corners android:radius="35dp"/>
            <stroke android:width="1dp" android:color="#fe6446"/>
            <gradient android:startColor="#f9f9f9" android:endColor="#f9f9f9" android:angle="0"/>
        </shape>
    </item>
</selector>
