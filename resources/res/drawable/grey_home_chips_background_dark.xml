<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:exitFadeDuration="@android:integer/config_shortAnimTime">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="35dp"/>
            <gradient android:startColor="#9e9e9e" android:endColor="#797979" android:angle="0"/>
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <corners android:radius="35dp"/>
            <stroke android:width="1dp" android:color="@color/grey_700"/>
            <gradient android:startColor="#171717" android:endColor="#171717" android:angle="0"/>
        </shape>
    </item>
</selector>
