<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:exitFadeDuration="@android:integer/config_shortAnimTime">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="35dp"/>
            <gradient android:startColor="#f44336" android:endColor="#cf382d" android:angle="0"/>
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <corners android:radius="35dp"/>
            <stroke android:width="1dp" android:color="#cf382d"/>
            <gradient android:startColor="#ffffff" android:endColor="#ffffff" android:angle="0"/>
        </shape>
    </item>
</selector>
