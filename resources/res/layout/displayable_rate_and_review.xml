<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="?attr/commentBackgroundColor" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <View android:background="?attr/reviewsSeparator" android:layout_width="match_parent" android:layout_height="1dp"/>
    <RelativeLayout android:paddingLeft="16dp" android:paddingTop="16dp" android:paddingRight="16dp" android:layout_width="match_parent" android:layout_height="match_parent">
        <ImageView android:id="@+id/user_icon" android:layout_width="34dp" android:layout_height="34dp" android:src="@drawable/layer_1"/>
        <androidx.appcompat.widget.AppCompatRatingBar android:id="@+id/rating_bar" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="9.7dp" android:progressDrawable="@drawable/rating_bar_small" android:numStars="5" android:stepSize="1" android:layout_toRightOf="@+id/user_icon" android:layout_alignTop="@+id/user_icon" android:layout_centerInParent="true" style="@style/Widget.AppCompat.RatingBar.Small"/>
        <TextView android:textSize="9sp" android:gravity="center" android:id="@+id/write_reply_btn" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="15.7dp" android:text="@string/reply" android:drawableLeft="@drawable/ic_reply" android:drawablePadding="5.7dp" android:layout_alignTop="@+id/user_icon" android:layout_alignParentRight="true" android:textAllCaps="true" android:drawableStart="@drawable/ic_reply"/>
        <TextView android:textSize="@dimen/text_size_small" android:textStyle="bold" android:textColor="?attr/commentTitleColor" android:ellipsize="end" android:id="@+id/comment_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="8.7dp" android:maxLines="1" android:layout_toLeftOf="@+id/write_reply_btn" android:layout_toRightOf="@+id/rating_bar" android:layout_alignTop="@+id/rating_bar" android:textAllCaps="true"/>
        <TextView android:textSize="8.7sp" android:textStyle="bold" android:ellipsize="end" android:id="@+id/user_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:maxLines="1" android:layout_toRightOf="@+id/user_icon" android:layout_below="@+id/comment_title" android:layout_alignLeft="@+id/rating_bar"/>
        <TextView android:textSize="8.7sp" android:ellipsize="end" android:id="@+id/added_date" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8.7dp" android:maxLines="1" android:layout_toRightOf="@+id/user_name" android:layout_alignBottom="@+id/user_name"/>
        <ImageView android:id="@+id/helpful_button" android:layout_width="27dp" android:layout_height="27dp" android:layout_marginTop="14dp" android:src="?attr/thumbsUpDrawable" android:layout_below="@+id/comment" android:layout_alignParentRight="true"/>
        <ImageView android:id="@+id/not_helpful_button" android:layout_width="27dp" android:layout_height="27dp" android:layout_marginTop="14dp" android:layout_marginRight="48dp" android:src="?attr/thumbsDownDrawable" android:layout_toLeftOf="@+id/helpful_button" android:layout_below="@+id/comment"/>
        <TextView android:textSize="8sp" android:gravity="center_vertical" android:id="@+id/show_replies_btn" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="14dp" android:drawableRight="@drawable/ic_up_arrow" android:drawablePadding="10dp" android:layout_below="@+id/comment" android:layout_alignParentLeft="true" android:textAllCaps="true" android:drawableEnd="@drawable/ic_up_arrow"/>
        <TextView android:textSize="11.3sp" android:id="@+id/comment" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/user_icon" android:layout_alignParentLeft="true"/>
    </RelativeLayout>
</LinearLayout>
