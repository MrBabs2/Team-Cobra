<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:clickable="true" android:layout_width="104dp" android:layout_height="165dp" app:cardCornerRadius="4dp" style="?attr/backgroundCard">
    <RelativeLayout android:orientation="vertical" android:paddingTop="8dp" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:id="@+id/icon_wrapper" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true">
            <ImageView android:id="@+id/native_main_image" android:background="@color/transparent" android:layout_width="1dp" android:layout_height="1dp" android:layout_centerHorizontal="true" android:contentDescription="native_main_image"/>
            <RelativeLayout android:id="@+id/primary_ad_view_layout" android:background="@color/transparent" android:layout_width="1dp" android:layout_height="1dp" android:layout_centerHorizontal="true"/>
            <ImageView android:id="@+id/icon" android:layout_width="88dp" android:layout_height="88dp" android:adjustViewBounds="true" android:contentDescription="@null"/>
        </RelativeLayout>
        <LinearLayout android:orientation="vertical" android:layout_width="107dp" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_marginTop="4dp" android:layout_marginRight="8dp" android:layout_marginBottom="5dp" android:layout_below="@+id/icon_wrapper">
            <TextView android:id="@+id/name" android:layout_width="match_parent" android:layout_height="wrap_content" android:lines="2" style="@style/Aptoide.TextView.Regular.XS.BlackAlpha"/>
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/app_info_layout" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="1dp" android:layout_marginTop="7dp" android:layout_marginRight="1dp">
                <ImageView android:layout_width="10dp" android:layout_height="10dp" android:src="?attr/ratingDrawable"/>
                <TextView android:id="@+id/rating_label" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" style="@style/Aptoide.TextView.Regular.XXS.Black"/>
                <TextView android:gravity="end" android:id="@+id/ad_label" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/all_title_ad" style="@style/Aptoide.TextView.Regular.XXS.Black"/>
            </LinearLayout>
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/appc_earn_layout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="1dp" android:layout_marginTop="7dp" android:layout_marginRight="1dp">
                <ImageView android:id="@+id/coins_image" android:layout_width="17dp" android:layout_height="15dp" android:layout_marginRight="5dp" android:scaleType="fitXY" app:srcCompat="@drawable/ic_get_appc"/>
                <TextView android:textColor="@color/curation_gold" android:id="@+id/reward_textview" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="2" style="@style/Aptoide.TextView.Medium.XXS"/>
            </LinearLayout>
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/appc_info_layout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="1dp" android:layout_marginTop="2dp" android:layout_marginRight="1dp">
                <ImageView android:layout_width="16dp" android:layout_height="16dp" android:layout_marginRight="5dp" android:src="@drawable/ic_spend_appc"/>
                <TextView android:id="@+id/appc_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/appc_card_short" style="@style/Aptoide.TextView.Medium.XXS.SpendAppc"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
