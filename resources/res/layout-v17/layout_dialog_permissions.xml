<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="4dp">
        <ImageView android:layout_gravity="center_vertical" android:id="@+id/dialog_appview_icon" android:paddingRight="14dp" android:layout_width="56dp" android:layout_height="56dp" android:src="@drawable/ic_avatar_apps" android:paddingEnd="14dp"/>
        <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textStyle="bold" android:ellipsize="end" android:layout_gravity="center_vertical" android:id="@+id/dialog_app_name" android:paddingBottom="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" style="@style/Aptoide.TextView.Medium.M.BlackAlpha"/>
            <TextView android:ellipsize="end" android:layout_gravity="center_vertical" android:id="@+id/dialog_app_info" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" style="@style/Aptoide.TextView.Regular.M.Secondary"/>
        </LinearLayout>
    </LinearLayout>
    <ScrollView android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
        <TableLayout android:id="@+id/dialog_table_permissions" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="5dp"/>
    </ScrollView>
    <TextView android:layout_gravity="end" android:id="@+id/dialog_ok_button" android:background="?attr/selectableItemBackground" android:paddingLeft="24dp" android:paddingTop="8dp" android:paddingRight="24dp" android:paddingBottom="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@android:string/ok" android:paddingStart="24dp" android:paddingEnd="24dp" style="@style/Aptoide.TextView.Regular.M.BlackAlpha"/>
</LinearLayout>
