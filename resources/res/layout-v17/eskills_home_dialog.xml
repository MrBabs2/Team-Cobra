<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="wrap_content" app:cardCornerRadius="7dp" app:cardUseCompatPadding="true">
    <ScrollView android:scrollbars="none" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:layout_gravity="center" android:id="@+id/promotion_graphic" android:layout_width="174dp" android:layout_height="174dp" android:layout_marginTop="24dp" android:src="@drawable/ic_eskills_dialog_graphic"/>
            <TextView android:textStyle="bold" android:layout_gravity="center" android:id="@+id/promotion_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="@string/eskills_onboarding_title" style="@style/Aptoide.TextView.Regular.XL.Black"/>
            <TextView android:id="@+id/description" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="28dp" android:layout_marginTop="8dp" android:layout_marginRight="28dp" android:text="@string/eskills_onboarding_body" android:textAlignment="center" android:layout_marginStart="28dp" android:layout_marginEnd="28dp" style="@style/Aptoide.TextView.Regular.L.BlackAlpha"/>
            <LinearLayout android:layout_gravity="center" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="32dp" android:layout_marginBottom="16dp">
                <android.widget.Button android:id="@+id/cancel_button" android:layout_width="140dp" android:layout_marginRight="16dp" android:text="@string/skip" android:layout_marginEnd="16dp" style="@style/Aptoide.Button.Flat"/>
                <android.widget.Button android:id="@+id/navigate_button" android:layout_width="140dp" android:text="@string/holidayspromotion_button_popup" style="@style/Aptoide.Button.Install"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.cardview.widget.CardView>
