<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="88dp" android:layout_marginLeft="4dp" android:layout_marginRight="4dp" android:layout_marginStart="4dp" android:layout_marginEnd="4dp">
    <ImageView android:id="@+id/user_icon" android:layout_width="34dp" android:layout_height="34dp" android:layout_marginTop="8dp" android:src="@drawable/ic_user_circle"/>
    <RatingBar android:id="@+id/rating_bar" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:numStars="5" android:stepSize="1" android:layout_toRightOf="@+id/user_icon" android:layout_marginStart="10dp" android:layout_toEndOf="@+id/user_icon" style="@style/RatingBarSmall"/>
    <TextView android:textSize="11sp" android:textStyle="bold" android:ellipsize="end" android:id="@+id/comment_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:maxLines="1" android:layout_toRightOf="@+id/user_icon" android:layout_below="@+id/rating_bar" android:layout_marginStart="10dp" android:layout_toEndOf="@+id/user_icon"/>
    <TextView android:textSize="@dimen/text_size_extra_small" android:textStyle="bold" android:ellipsize="end" android:id="@+id/user_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:maxLines="1" android:layout_toRightOf="@+id/user_icon" android:layout_below="@+id/comment_title" android:layout_marginStart="10dp" android:layout_toEndOf="@+id/user_icon"/>
    <TextView android:textSize="@dimen/text_size_extra_small" android:ellipsize="end" android:id="@+id/added_date" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:maxLines="1" android:layout_toRightOf="@+id/user_name" android:layout_alignBottom="@+id/user_name" android:layout_marginStart="10dp" android:layout_toEndOf="@+id/user_name"/>
    <TextView android:textSize="11sp" android:ellipsize="end" android:id="@+id/comment" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="8dp" android:maxLines="2" android:layout_below="@+id/user_name" android:layout_alignParentLeft="true" android:layout_alignParentEnd="true"/>
</RelativeLayout>
