<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <FrameLayout android:id="@+id/media_container" android:layout_width="328dp" android:layout_height="200dp">
        <ImageView android:id="@+id/image_item" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="centerCrop" android:adjustViewBounds="true"/>
        <FrameLayout android:id="@+id/editorial_video_thumbnail_container" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:foreground="@color/overlay_black">
            <ImageView android:id="@+id/editorial_video_thumbnail" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@color/black_87_alpha" android:scaleType="centerCrop" android:adjustViewBounds="true" android:tint="@color/semi_transparent_black"/>
            <ImageView android:layout_gravity="center" android:layout_width="50dp" android:layout_height="50dp" android:src="@drawable/btn_movie_play_normal" android:scaleType="centerCrop" android:adjustViewBounds="true"/>
        </FrameLayout>
    </FrameLayout>
    <TextView android:id="@+id/editorial_image_description" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_marginTop="11dp" android:maxWidth="320dp" android:lines="1" android:layout_below="@+id/media_container" android:layout_marginStart="8dp" style="@style/Aptoide.TextView.Regular.XS"/>
</RelativeLayout>
