<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:id="@+id/app_icon" android:layout_width="56dp" android:layout_height="56dp" android:layout_marginRight="8dp" android:layout_marginBottom="8dp" android:layout_marginEnd="8dp"/>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="8dp" android:layout_toRightOf="@+id/app_icon" android:layout_centerInParent="true" android:layout_toEndOf="@+id/app_icon">
            <TextView android:id="@+id/app_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" style="@style/Aptoide.TextView.Medium.M"/>
            <TextView android:id="@+id/app_reward" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/Aptoide.TextView.Medium.S"/>
        </LinearLayout>
    </RelativeLayout>
    <TextView android:id="@+id/app_description" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="1dp" android:layout_marginStart="1dp" style="@style/Aptoide.TextView.Regular.S.BlackAlpha"/>
</LinearLayout>
